<ui:BaseView x:Class="VGA.Menu.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:viewModels="clr-namespace:VGA.Menu.ViewModels"
             xmlns:controls="clr-namespace:VGA.Menu.Controls"
             x:TypeArguments="viewModels:MenuViewModel"
             xmlns:ui="clr-namespace:Common.UI;assembly=Common.UI"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <controls:HomeButton VerticalAlignment="Center"
                             Command="{Binding HomeCommand}"/>

        <controls:BackButton VerticalAlignment="Center"
                             Grid.Column="2" 
                             IsEnabled="{Binding IsBackEnabled, UpdateSourceTrigger=PropertyChanged}"
                             Command="{Binding BackCommand}"/>
    </Grid>
</ui:BaseView>
